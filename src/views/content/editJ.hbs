<div class="container p-4">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <form action="/content/editJ/{{juego.juego_id}}" method="POST">
                        <div class="form-group p-2">
                            <input type="text" value="{{juego.nombre}}" class="form-control" name="nombre" autofocus>
                        </div>
                        <div class="form-group p-2">
                            <input type="text" value="{{juego.formato}}" class="form-control" name="formato" autofocus>
                        </div>
                        <div class="form-group p-2">
                            <textarea name="descripcion" rows="2" class="form-control">{{juego.descripcion}}</textarea>
                        </div>
                        <div class="form-group p-2">
                            <button class="btn btn-success" type="submit">Guardar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>