<div class="container p-4">
    <div class="row">
        {{#each consolas}}
            <div class="card border-primary mb-3 m-3" style="max-width: 18rem;">
                <div class="card-header">consolas</div>
                <div class="card-body text-primary">
                    <h5 class="card-title">{{nombre}}</h5>
                    <p class="card-text">{{descripcion}}</p>
                </div>
                <div class="btn-group">
                    <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                        Configurar
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="/content/delete/{{consola_id}}">Borrar</a></li>
                        <li><a class="dropdown-item" href="/content/edit/{{consola_id}}">Modificar</a></li>
                    </ul>
                </div>
            </div>
        {{else}}
            <div class="alert alert-primary" role="alert">No hay consolas <a href="/content/inicio" class="alert-link">Crear una!</a>. Si lo deseas.
            </div>
        {{/each}}
    </div>
</div>